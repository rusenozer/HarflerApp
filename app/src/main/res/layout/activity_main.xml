<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1F3E0"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@+id/stars_layout"
            app:layout_constraintEnd_toStartOf="@+id/stars_layout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/stars_layout"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="#FFF9F9"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="Puan: " />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"

                />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"

                />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"

                />
            <ImageView
                android:id="@+id/star6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="235dp"
            android:layout_height="172dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/donkey" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="372dp"
            android:layout_height="38dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Hangi harfle başlıyor?"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.173" />


        <LinearLayout
            android:id="@+id/stars_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            >

        <ImageView
            android:id="@+id/star1_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favourite"
            android:visibility="invisible"/>



        <ImageView
            android:id="@+id/star2_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favourite"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/star3_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favourite"
            android:visibility="invisible"/>



            <ImageView
            android:id="@+id/star4_f"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/favourite"
                android:visibility="invisible"/>

        <ImageView
            android:id="@+id/star5_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favourite"
            android:visibility="invisible"/>


            />
        <ImageView
            android:id="@+id/star6_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favourite"
            android:visibility="invisible"/>

            />

        </LinearLayout>
        <Button
            android:id="@+id/button3"
            style="@style/buton_style"
            android:text="A"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/button"
            style="@style/buton_style"
            android:text="E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/button4"
            style="@style/buton_style"
            android:text="K"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/button5"
            style="@style/buton_style"
            android:text="İ"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/button6"
            style="@style/buton_style"
            android:text="N"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <Button
            android:id="@+id/button2"
            style="@style/buton_style"
            android:text="L"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.115" />

        <ImageView
            android:id="@+id/ilerle_button"
            android:layout_width="141dp"
            android:layout_height="135dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/right_arrow"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/ikincigrup_harfler_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OMUTÜY"
            android:textColor="#4F60CC"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kucuk_boyut_baslik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.641"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ilerle_button"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/kucuk_boyut_baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2. GRUP HARFLER"
            android:textColor="#EA9999"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ilerle_button"
            app:layout_constraintVertical_bias="0.592"
            android:visibility="invisible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
